{
    "name": "miniprogram-ts-quickstart",
    "version": "1.0.0",
    "description": "微信小程序脚手架",
    "scripts": {
        "uat": "cheers-mp-service serve --mode uat --open",
        "prd": "cheers-mp-service serve --open",
        "build:uat": "cheers-mp-service build --mode uat --upload",
        "build:prd": "cheers-mp-service build --upload",
        "lint": "eslint --fix src/**/*.ts"
    },
    "author": "bigMeow",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "cheers-mp-plugin-router": "^1.4.0",
        "cheers-mp-service": "^1.4.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "miniprogram-api-typings": "^2.10.4",
        "prettier": "^2.0.4",
        "typescript": "~3.9.0"
    },
    "dependencies": {
        "@vant/weapp": "^1.2.0",
        "axios-miniprogram-adapter": "^0.3.0",
        "cheers-mp-router": "^1.1.0",
        "miniprogram-computed": "^2.1.1"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 200,
        "trailingComma": "none",
        "endOfLine": "lf",
        "overrides": [
            {
                "files": [
                    "*.wxml"
                ],
                "options": {
                    "parser": "html",
                    "tabWidth": 4
                }
            }
        ]
    }
}
